                                        <VisualState.Setters>
                                            <Setter Target="HeaderPanel.Orientation" Value="Vertical"/>
                                            <Setter Target="CommentHeader.Width" Value="0"/>
                                            <Setter Target="LecturerHeader.Width" Value="0"/>
                                            <Setter Target="StarHeader.Width" Value="0"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Phone">
                                        <VisualState.StateTriggers>
                                            <AdaptiveTrigger MinWindowWidth="0"/>
                                        </VisualState.StateTriggers>
                                        <VisualState.Setters>
                                            <Setter Target="TermHeader.FontSize" Value="24"/>
                                            <Setter Target="HeaderPanel.Orientation" Value="Vertical"/>
                                            <Setter Target="CommentHeader.Width" Value="0"/>
                                            <Setter Target="LecturerHeader.Width" Value="0"/>
                                            <Setter Target="StarHeader.Width" Value="0"/>
                                            <Setter Target="ItemBody.Margin" Value="30,20,30,20"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <StackPanel x:Name="ItemBody" Margin="50,20,50,20" HorizontalAlignment="Stretch">
                                <StackPanel x:Name="HeaderPanel" HorizontalAlignment="Stretch" Orientation="Horizontal"  Margin="0,0,0,20">
