<Application
    x:Class="UCqu.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UCqu"
    >

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AlternateRowBackgroundBrush" Color="{ThemeResource SystemBaseLowColor}" Opacity="0.5"/>
            <local:GPAStarConverter x:Key="GPAStarConverter"/>
            <local:GrandGPAConverter x:Key="GrandGPAConverter"/>
            <local:TermGPAConverter x:Key="TermGPAConverter"/>
            <local:CourseGPAConverter x:Key="CourseGPAConverter"/>

            <AcrylicBrush x:Key="NavigationViewTopPaneBackground" BackgroundSource="HostBackdrop" TintColor="{ThemeResource SystemAccentColorLight1}" TintOpacity=".7" FallbackColor="{ThemeResource SystemAccentColorLight1}"/>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
